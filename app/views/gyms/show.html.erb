<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @gym %>

    <%= link_to 'Edit this gym', edit_gym_path(@gym), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this gym', gym_path(@gym), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Go to members', gym_members_path(@gym), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
  <div>
    <%= link_to "Sign Out", destroy_user_session_path, 'data-turbo-method': :delete, class: "hover:underline" %><br>
    <%= link_to "Edit Profile", edit_user_registration_path, class:"hover:underline"%>
  </div>
</div>
