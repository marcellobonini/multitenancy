<div id="<%= dom_id member %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= member.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Gym:</strong>
    <%= member.gym_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this member", gym_member_path(@gym, member), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this member', edit_gym_member_path(@gym, member), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
